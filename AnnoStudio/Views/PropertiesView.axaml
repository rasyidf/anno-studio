<UserControl
    x:Class="AnnoStudio.Views.PropertiesView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:AnnoStudio.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="300"
    x:DataType="vm:PropertiesViewModel"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:PropertiesViewModel />
    </Design.DataContext>

    <ScrollViewer>
        <StackPanel Margin="10" Spacing="10">
            <TextBlock
                FontSize="16"
                FontWeight="Bold"
                Text="Properties" />

            <!-- Show message when nothing is selected -->
            <TextBlock
                IsVisible="{Binding !HasSelection}"
                Text="No object selected"
                Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                FontStyle="Italic"
                Margin="0,20,0,0" />

            <!-- Properties panel when object is selected -->
            <StackPanel IsVisible="{Binding HasSelection}" Spacing="8">
                <Separator />
                
                <StackPanel Spacing="5">
                    <TextBlock Text="Name:" FontWeight="SemiBold" />
                    <TextBox Text="{Binding Name}" Watermark="Object name" />
                </StackPanel>

                <StackPanel Spacing="5">
                    <TextBlock Text="Building Type:" FontWeight="SemiBold" />
                    <TextBox Text="{Binding BuildingType}" Watermark="e.g., Residence, Production" />
                </StackPanel>

                <Separator />

                <TextBlock Text="Size" FontWeight="Bold" FontSize="14" />

                <Grid ColumnDefinitions="*,10,*" RowDefinitions="Auto,Auto">
                    <StackPanel Grid.Column="0" Spacing="5">
                        <TextBlock Text="Width:" />
                        <NumericUpDown 
                            Minimum="1" 
                            Maximum="100"
                            Value="{Binding Width}" 
                            FormatString="0" />
                    </StackPanel>

                    <StackPanel Grid.Column="2" Spacing="5">
                        <TextBlock Text="Height:" />
                        <NumericUpDown 
                            Minimum="1" 
                            Maximum="100"
                            Value="{Binding Height}" 
                            FormatString="0" />
                    </StackPanel>
                </Grid>

                <Separator />

                <TextBlock Text="Transform" FontWeight="Bold" FontSize="14" />

                <StackPanel Spacing="5">
                    <TextBlock Text="Position X:" />
                    <NumericUpDown 
                        Value="{Binding PositionX}" 
                        FormatString="0.00"
                        Increment="1" />
                </StackPanel>

                <StackPanel Spacing="5">
                    <TextBlock Text="Position Y:" />
                    <NumericUpDown 
                        Value="{Binding PositionY}" 
                        FormatString="0.00"
                        Increment="1" />
                </StackPanel>

                <StackPanel Spacing="5">
                    <TextBlock Text="Rotation:" />
                    <NumericUpDown 
                        Value="{Binding Rotation}" 
                        FormatString="0.0"
                        Minimum="0"
                        Maximum="360"
                        Increment="15" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
