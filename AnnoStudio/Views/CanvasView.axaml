<UserControl
    x:Class="AnnoStudio.Views.CanvasView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:AnnoStudio.ViewModels"
    xmlns:canvas="using:AnnoStudio.EditorCanvas.Controls"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:CanvasViewModel"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:CanvasViewModel />
    </Design.DataContext>

    <Border
        Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
        BorderBrush="{DynamicResource SystemControlBackgroundBaseLowBrush}"
        BorderThickness="0">
        <canvas:EditorCanvas 
            x:Name="EditorCanvasControl"
            DataContext="{Binding Document.EditorViewModel}" />
    </Border>
</UserControl>
