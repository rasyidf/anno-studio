<Window
    x:Class="AnnoDesigner.Welcome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:AnnoDesigner"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:AnnoDesigner.Properties"
    xmlns:viewModel="clr-namespace:AnnoDesigner.ViewModels"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    x:Name="welcomeWindow"
    FontFamily="Segoe UI"
    Title="Welcome"
    Width="525"
    Height="705"
    MinWidth="300"
    MinHeight="300"
    Padding="10,10,10,10"
    d:DataContext="{d:DesignInstance Type=viewModel:WelcomeViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="705"
    d:DesignWidth="525"
    Icon="/Assets/icon.ico"
    Left="{Binding Source={x:Static properties:Settings.Default}, Path=WelcomeLeft, Mode=TwoWay}"
    ResizeMode="NoResize"
    Top="{Binding Source={x:Static properties:Settings.Default}, Path=WelcomeTop, Mode=TwoWay}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="0,0,2,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock
            Width="433"
            Margin="79,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="30"
            Text="Welcome to the Anno Designer!" />
        <Image
            Width="64"
            Height="68"
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Assets/Icons/icon64.png"
            Stretch="Fill" />
        <TextBlock
            Width="433"
            Height="38"
            Margin="79,45,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="22"><Run Text="Please select a language:" /></TextBlock>
        <ui:ListView
            Margin="10,83,10,48"
            HorizontalContentAlignment="Stretch"
            d:ItemsSource="{d:SampleData ItemCount=5}"
            BorderThickness="0"
            ItemsSource="{Binding Languages}"
            ScrollViewer.CanContentScroll="False"
            SelectedItem="{Binding SelectedItem}"
            SelectionMode="Single">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction Command="{Binding ContinueCommand}" CommandParameter="{Binding ElementName=welcomeWindow}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <ListView.ItemTemplate>
                <DataTemplate >
                    <StackPanel
                        Margin="20"
                        HorizontalAlignment="Stretch"
                        Orientation="Horizontal">
                        <Image Width="100" Source="{Binding FlagPath}" />
                        <Label
                            Padding="5"
                            Width="Auto"
                            VerticalContentAlignment="Center"
                            Content="{Binding Name}"
                            FontSize="16" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ui:ListView>
        <Button
            Margin="10,0,373,10"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Command="{Binding ContinueCommand}"
            CommandParameter="{Binding ElementName=welcomeWindow}"
            Content="Continue" />
        <TextBlock
            Width="146"
            Margin="329,88,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            RenderTransformOrigin="0.416,0.462"
            TextWrapping="Wrap" />
    </Grid>
</Window>
