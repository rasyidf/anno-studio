<ui:FluentWindow
    x:Class="AnnoDesigner.PreferencesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:l="clr-namespace:AnnoDesigner.Localization"
    xmlns:local="clr-namespace:AnnoDesigner"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewModel="clr-namespace:AnnoDesigner.ViewModels"
    Name="Preferences"
    Title="{l:Localize Preferences}"
    Width="800"
    Height="450"
    d:Background="White"
    d:DataContext="{d:DesignInstance Type=viewModel:PreferencesViewModel,
                                     IsDesignTimeCreatable=True}"
    d:Foreground="Black"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1" MinWidth="200" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.ColumnSpan="3"
            Margin="1"
            ShowMaximize="False"
            ShowMinimize="False">
            <ui:TitleBar.Header>
                <TextBlock Margin="8" Text="{l:Localize Preferences}" />
            </ui:TitleBar.Header>
        </ui:TitleBar>

        <DockPanel
            Grid.Row="1"
            Grid.Column="0"
            HorizontalAlignment="Stretch"
            LastChildFill="True">
            <ScrollViewer
                DockPanel.Dock="Top"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <StackPanel.Resources>
                        <Style x:Key="MenuItemStyle" TargetType="{x:Type ListViewItem}">
                            <Setter Property="FontSize" Value="16" />
                            <Setter Property="Padding" Value="8" />
                            <Setter Property="Margin" Value="4,2" />    
                        </Style>
                    </StackPanel.Resources>
                    <ListView
                        ItemsSource="{Binding Pages}"
                        SelectedItem="{Binding SelectedItem}"
                        SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{l:DynamicLocalize HeaderKeyForTranslation}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </ScrollViewer>
            <!--  space kept for potential additional bottom items in menu  -->
        </DockPanel>

        <!--  Resizer between menu and content  -->
        <GridSplitter
            Grid.Row="1"
            Grid.Column="1"
            Width="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch" />

        <ui:Card
            Grid.Row="1"
            Grid.Column="2"
            VerticalAlignment="Stretch"
            VerticalContentAlignment="Top">

            <!--  Main content area  -->
            <ui:DynamicScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Frame Name="CurrentPage" NavigationUIVisibility="Hidden" />
            </ui:DynamicScrollViewer>
        </ui:Card>

        <!--  Footer spanning all columns  -->
        <Border
            Grid.Row="2"
            Grid.ColumnSpan="3"
            Padding="10"
            BorderThickness="1,0,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="12"
                    Text="Changes automatically saved" />

                <Button
                    Grid.Column="1"
                    Height="30"
                    MinWidth="90"
                    Margin="0,0,0,0"
                    VerticalAlignment="Center"
                    Command="{Binding CloseWindowCommand}"
                    CommandParameter="{Binding ElementName=Preferences}"
                    Content="Close" />
            </Grid>
        </Border>
    </Grid>
</ui:FluentWindow>
