<ui:FluentWindow
    x:Class="AnnoDesigner.InputWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:l="clr-namespace:AnnoDesigner.Localization"
    xmlns:local="clr-namespace:AnnoDesigner"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewModel="clr-namespace:AnnoDesigner.ViewModels"
    Title="InputWindow"
    MinWidth="400"
    MinHeight="200"
    Padding="0"
    d:DataContext="{d:DesignInstance Type=viewModel:MainViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="269.243"
    d:DesignWidth="400"
    ResizeMode="CanMinimize"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <DockPanel Margin="0"
               LastChildFill="True">
        <ui:TitleBar Title="{Binding Title, RelativeSource={RelativeSource AncestorType={x:Type ui:FluentWindow}}}" CanMaximize="False" ShowMinimize="False" ShowMaximize="False" DockPanel.Dock="Top">
        </ui:TitleBar>
        <TextBlock
            x:Name="message"
            Margin="6"
            HorizontalAlignment="Stretch"
            DockPanel.Dock="Top"
            Text="The message"/>

        <ui:Card
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Padding="6"
            DockPanel.Dock="Bottom">

            <Grid HorizontalAlignment="Right"
                  VerticalAlignment="Stretch"  >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ui:Button
                    Appearance="Primary"
                    x:Name="OkButton"
                    Grid.Column="0"
                    MinWidth="100" MinHeight="32"
                    Padding="2, 2, 2,8"
                    d:Content="OK"
                    Click="OkButton_Click"
                    Content="{l:Localize OK}"/>
                <Button
                    x:Name="CancelButton"
                    Grid.Column="2"
                    Padding="2"
                    MinWidth="100" MinHeight="32"
                    d:Content="Cancel"
                    Click="CancelButton_Click"
                    Content="{l:Localize Cancel, FallbackValue=OK }"/>
            </Grid>
        </ui:Card>

        <TextBox
            x:Name="input"
            MaxHeight="250"
            Margin="5"
            Padding="3,3,3,3"
            AcceptsReturn="True"
            FontFamily="Arial"
            FontSize="14"
            MinLines="3"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto"/>
    </DockPanel>
</ui:FluentWindow>
