<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <!--  Compact sizing tokens  -->
    <Thickness x:Key="CompactCardMargin">4</Thickness>
    <Thickness x:Key="CompactCardPadding">6</Thickness>

    <!--  Compact card style for ui:Card (small)  -->
    <Style x:Key="CompactCardStyle" TargetType="{x:Type ui:Card}">
        <Setter Property="Margin" Value="{StaticResource CompactCardMargin}" />
        <Setter Property="Padding" Value="{StaticResource CompactCardPadding}" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="MinWidth" Value="160" />
        <Setter Property="Background" Value="#F7F7F7" />
        <Setter Property="BorderBrush" Value="#E0E0E0" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!--  Compact card style for ui:Card (large)  -->
    <Style
        x:Key="CompactCardLargeStyle"
        BasedOn="{StaticResource CompactCardStyle}"
        TargetType="{x:Type ui:Card}">
        <Setter Property="MinWidth" Value="260" />
    </Style>

    <!--  Compact text styles  -->
    <Style x:Key="CompactHeader" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Margin" Value="0,0,0,4" />
    </Style>

    <Style x:Key="CompactValue" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Margin" Value="0,1,0,6" />
    </Style>

    <Style x:Key="CompactLabel" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="Foreground" Value="#666666" />
    </Style>

</ResourceDictionary>